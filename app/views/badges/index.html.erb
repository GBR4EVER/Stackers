<div class="panel panel-default">
  <div class="panel-heading"><h1>My Badges</h1></div>
    <div class="panel-body">
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @badges.each do |badge| %>
            <tr>
              <td><%= image_tag badge.image.url(:thumb) %></td>
              <td><%= badge.name %></td>
              <td><%= badge.description %></td>
              <td><%= link_to 'Edit', edit_badge_path(badge), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', badge, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>

  <div class="panel-footer"><%= link_to 'New Badge', new_badge_path, class: "btn btn-success" %></div>
</div>