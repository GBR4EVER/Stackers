<div class="panel panel-default">
  <div class="panel-heading"><h1>My Badges</h1></div>
    <div class="panel-body">
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <div id="badges" class="transitions-enabled">
        <tbody>
          <% @badges.each do |badge| %>
          <div class="box">
            <tr>
              <td><%= link_to image_tag(badge.image.url(:medium)), badge %></td>
              <td><%= badge.name %></td>
              <td><%= badge.description %></td>
              <td><%= badge.user.email if badge.user %></td>
              <% if badge.user == current_user %>
                <td><%= link_to 'Edit', edit_badge_path(badge), class: "btn btn-warning" %></td>
                <td><%= link_to 'Delete', badge, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
              <% end %>  
            </tr>
          </div>
          <% end %>
        </tbody>
      </div>
      </table>

      <br>
    </div>

  <div class="panel-footer"><%= link_to 'New Badge', new_badge_path, class: "btn btn-success" %></div>
</div>